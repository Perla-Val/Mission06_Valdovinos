@{
}

@model Application

<h1>Add To The Collection</h1>

<p>Please add your best movies to the collection.</p>

<form method="post">
    <input type="hidden"  asp-for="MovieID"/>

    <label asp-for="CategoryID">Category:</label>
    <select>
        <option value="">Select a Category</option>
        @foreach (Categories c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br /><br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required><br><br>

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required><br><br>

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required><br><br>

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br><br>

    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited" >
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br><br>

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo"><br><br>

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25"><br><br>

    <button type="submit">Submit Application</button>
</form>
